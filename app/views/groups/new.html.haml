.container.mx-auto
  %h1.text-4xl グループ作成
  = form_with model: @group do |f|
    %div
      = f.label :name, class: 'block'
      = f.text_field :name, class: 'form-input w-full'
    %div
      = f.label :description, class: 'block'
      = f.text_area :description, class: 'w-full'
    %div
      = f.label :user_ids, class: 'block'
      = f.select :user_ids, User.pluck(:name, :id), {}, { multiple: true, class: 'form-multiselect w-full' }
    = f.submit '送信', class: 'bg-blue-500 py-2 px-4 text-white rounded'
